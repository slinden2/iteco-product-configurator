generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Configuration {
  id                    Int              @id @default(autoincrement())
  name                  String
  description           String?
  brush_num             Int
  brush_type            BrushType
  brush_color           BrushColor
  has_shampoo_pump      Boolean
  has_wax_pump          Boolean
  has_chemical_pump     Boolean
  chemical_num          Int?
  chemical_pump_pos     ChemicalPumpPos?
  has_foam              Boolean?
  has_acid_pump         Boolean
  has_hp_roof_bar       Boolean
  has_chemical_roof_bar Boolean?
  has_high_spinners     Boolean
  has_low_spinners      Boolean
  has_short_hp_bars     Boolean
  has_long_hp_bars      Boolean
  supply_side           SupplySide
  supply_type           SupplyType
  supply_fixing_type    SupplyFixingType
  has_post_frame        Boolean?
  cable_chain_width     CableChainWidth?
  has_double_supply     Boolean
  water_type_1          WaterType
  water_type_2          WaterType?
  rail_type             RailType
  rail_length           Int
  rail_guide_num        Int
  has_itecoweb          Boolean
  created_at            DateTime         @default(now())
  updated_at            DateTime         @updatedAt

  @@map("configurations")
}

// If Prisma enums are modified, check also zod validation enums
enum BrushType {
  THREAD
  MIXED
  CARLITE
}

enum BrushColor {
  BLUE_SILVER
  GREEN_SILVER
  RED
  GREEN_BLACK
}

enum ChemicalPumpPos {
  ABOARD
  WASH_BAY
}

enum SupplySide {
  LEFT
  RIGHT
}

enum SupplyType {
  STRAIGHT_SHELF
  BOOM
  CABLE_CHAIN
}

enum SupplyFixingType {
  WALL
  FLOOR
}

enum CableChainWidth {
  L150
  L200
  L250
  L300
}

enum WaterType {
  NETWORK
  RECYCLED
  DEMINERALIZED
}

enum RailType {
  DOWELED
  WELDED
}
